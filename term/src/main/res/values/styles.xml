<resources>
    <!-- "Compat" application themes ... -->
    <style name="AppTheme" parent="Theme.AppCompat">
        <!-- "TermOne Plus" default(Dark) theme -->
        <!-- color for the appbar and other primary UI elements -->
        <item name="colorPrimary">#607D8B</item>
        <!-- a darker variant of the primary color, used for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">#455A64</item>
        <!-- a secondary color for controls like checkboxes and text fields -->
        <item name="colorAccent">#8BC34A</item>
        <!-- custom application attributes -->
        <!-- indirect reference to text color to avoid lint error
        "Using theme reference in XML drawables requires API level 21" -->
        <item name="colorFolder">?android:attr/textColorPrimary</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light">
        <!-- "TermOne Plus" "Light" theme -->
        <item name="colorPrimary">#607D8B</item>
        <item name="colorPrimaryDark">#455A64</item>
        <item name="colorAccent">#8BC34A</item>
        <item name="colorFolder">?android:attr/textColorPrimary</item>
    </style>
    <style name="AppTheme.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- style used in "AddShortcut" activity -->
    <style name="AppTheme.NoActionBar.Translucent">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>
</resources>
